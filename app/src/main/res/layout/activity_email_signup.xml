<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmailSignup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="282dp"
                android:layout_height="133dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/bvrit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:text="Register"
                android:textColor="#000"
                android:textSize="28sp"
                app:fontFamily="serif" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/name_register"
                    android:layout_width="298dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/edittext_border"
                    android:hint="Name"
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:textColor="#000"
                    android:textSize="16dp"
                    tools:targetApi="lollipop" />
            </android.support.design.widget.TextInputLayout>

            <RadioGroup
                android:id="@+id/switchView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/faculty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="Faculty" />

                <RadioButton
                    android:id="@+id/student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Student" />
            </RadioGroup>


            <!-- For Student Registration -->
            <LinearLayout
                android:id="@+id/studentViewGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:text="Branch"
                    android:textColor="#000" />

                <Spinner
                    android:id="@+id/branch_student"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:entries="@array/branch" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:text="Year"
                    android:textColor="#000" />

                <Spinner
                    android:id="@+id/year_student"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:entries="@array/year" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:text="Gender"
                    android:textColor="#000" />

                <Spinner
                    android:id="@+id/gender_student"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:entries="@array/gender" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/roll_student"
                        android:layout_width="298dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/edittext_border"
                        android:hint="RollNo"
                        android:inputType="text"
                        android:paddingLeft="5dp"
                        android:textColor="#000"
                        android:textSize="16dp"
                        tools:targetApi="lollipop" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/mobile_student"
                        android:layout_width="298dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/edittext_border"
                        android:hint="Mobile Number"
                        android:inputType="phone"
                        android:paddingLeft="5dp"
                        android:text="+91"
                        android:textColor="#000"
                        android:textSize="16dp"
                        tools:targetApi="lollipop" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/email_student"
                        android:layout_width="298dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/edittext_border"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="5dp"
                        android:textColor="#000"
                        android:textSize="16dp"
                        tools:targetApi="lollipop" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/paswd_student"
                        android:layout_width="298dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/edittext_border"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:paddingLeft="5dp"
                        android:textColor="#000"
                        android:textSize="16dp"
                        tools:targetApi="lollipop" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <!-- For Faculty Registration -->
            <LinearLayout
                android:id="@+id/facultyViewGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:text="Department"
                    android:textColor="#000" />

                <Spinner
                    android:id="@+id/dept_faculty"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:entries="@array/branch" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:text="Gender"
                    android:textColor="#000" />

                <Spinner
                    android:id="@+id/gender_faculty"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:entries="@array/gender" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/mobile_faculty"
                        android:layout_width="298dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/edittext_border"
                        android:hint="Mobile Number"
                        android:inputType="phone"
                        android:paddingLeft="5dp"
                        android:text="+91"
                        android:textColor="#000"
                        android:textSize="16dp"
                        tools:targetApi="lollipop" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/email_faculty"
                        android:layout_width="298dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/edittext_border"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="5dp"
                        android:textColor="#000"
                        android:textSize="16dp"
                        tools:targetApi="lollipop" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/paswd_faculty"
                        android:layout_width="298dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/edittext_border"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:paddingLeft="5dp"
                        android:textColor="#000"
                        android:textSize="16dp"
                        tools:targetApi="lollipop" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <Button
                android:id="@+id/signUpMan"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_shape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>